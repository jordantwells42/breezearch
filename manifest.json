{   
    "name": "breezearch",
    "manifest_version": 3,  
    "version": "1.0",
    "background": {
      "service_worker": "background.js"
    },

  "permissions": ["tabs", "activeTab", "scripting", "tabGroups", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
  "options_page": "options.html",

 "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["content.js", "popup.js"],
     "run_at": "document_start"
   }
  ],

  "default_icon": {
    "128": "breezy_img_128.jpg",
    "64": "breezy_img_48.jpg",
    "32": "breezy_img_32.jpg",
    "16": "breezy_img_16.jpg"
  }
  ,

  "icons": {
    "128": "breezy_img_128.jpg",
    "64": "breezy_img_48.jpg",
    "32": "breezy_img_32.jpg",
    "16": "breezy_img_16.jpg"
  }
  ,
  "host_permissions": [
      "<all_urls>"
  ]

}